<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebAppObligatorio</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebAppObligatorio.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">WebAppObligatorio</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">


                        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                            <ul class="navbar-nav flex-grow-1">

                                @*                     BOTONES PARA TODOS
                                *@

                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                                </li>

                                @if (Context.Session.GetInt32("logueadoId") != null)
                                {
                                    //BOTONES PARA EL USUARIO LOGUEADO

                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Empleado" asp-action="Logout">Cerrar sesión</a>
                                    </li>

                                    if (Context.Session.GetString("logueadoRol") == "Peon")
                                    {
                                        //BOTONES PARA EL EMPLEADO PEON
                                        <li class="nav-item">
                                            <a class="nav-link text-dark" asp-area="" asp-controller="Empleado" asp-action="DatosPeon">Ver Mis datos</a>
                                        </li>


                                        <li class="nav-item">
                                            <a class="nav-link text-dark" asp-area="" asp-controller="Empleado" asp-action="ListarTareasPeon">Lista de tareas</a>
                                        </li>

                                        <li class="nav-item">
                                            <a class="nav-link text-dark" asp-area="" asp-controller="Ganado" asp-action="ListarGanado"> Vacunar animal</a>
                                        </li>

                                    }
                                    

                               if (Context.Session.GetString("logueadoRol") == "Capataz"){
                                        //BOTONES PARA EL EMPLEADO CAPATAZ


                                       

                                            <li class="nav-item">
                                            <a class="nav-link text-dark" asp-area="" asp-controller="Empleado" asp-action="ListarEmpleado">Lista de Empleados</a>
                                            </li>

                                            <li class="nav-item">
                                                <a class="nav-link text-dark" asp-area="" asp-controller="Ganado" asp-action="RegistroBovino">Registro de Bovino</a>
                                            </li>

                                        <li class="nav-item">
                                            <a class="nav-link text-dark" asp-area="" asp-controller="Ganado" asp-action="ListarGanadoPotrero">Asignar Potrero</a>
                                        </li>

                                        <li class="nav-item">
                                            <a class="nav-link text-dark" asp-area="" asp-controller="Empleado" asp-action="AsignarTarea">Asignar Tarea</a>
                                        </li>

                                        <li class="nav-item">
                                            <a class="nav-link text-dark" asp-area="" asp-controller="Ganado" asp-action="BuscarGanado">Buscar Ganado</a>
                                        </li>

                                        <li class="nav-item">
                                            <a class="nav-link text-dark" asp-area="" asp-controller="Potrero" asp-action="PotrerosOrdenados">Listado de potreros</a>
                                        </li>


                                    }

                                }
                                else
                                {
                                    //BOTONES PARA EL USUARIO DESLOGUEADO

                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Empleado" asp-action="Alta">Registro Peon</a>
                                    </li>


                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Empleado" asp-action="Login">Iniciar Sesión</a>
                                    </li>


                                  
                                }
                        
                        
                        
                        
                        
                        
                        
                        
                        
                        
                        
                        
                        
                        
                        
                    
                    
                       
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - WebAppObligatorio - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
