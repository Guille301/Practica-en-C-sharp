@model Obligatorio.Tarea

@{
    ViewBag.Title = "Asignar tarea al Peon";
}

<h1>Asignar tarea al Peon con id: @ViewBag.IdPeon</h1>
<hr />
<form method="post">
    <input type="hidden" value="@ViewBag.IdPeon" name="idPeon" />

    <div class="form-group">
        <label class="control-label">Descripción</label>
        <input asp-for="Descripcion" class="form-control" />
    </div>


    <div class="form-group">
        <label class="control-label">Fecha de cierre</label>
        <input asp-for="FechaCierre" class="form-control" />
    </div>

    <input type="submit" value="Asignar" class="btn btn-primary" />
</form>

<p>@ViewBag.msg</p>
