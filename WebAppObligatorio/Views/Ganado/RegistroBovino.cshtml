
@model Obligatorio.Bovino
<h1>Registro de Bovino</h1>
<h4>Subtítulo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label  class="control-label">Raza</label>
                <input asp-for="raza" class="form-control" />
   
            </div>
            
            <div class="form-group">
                <label  class="control-label">Codigo de Caravana</label>
                <input asp-for="codigoIdentificadorCaravana" class="form-control" />
   
            </div>

            <div class="form-group">
                <label class="control-label">Sexo</label>
                <select asp-for="sexo" class="form-control">
                    @foreach (var sexo in ViewBag.sexo)
                    {
                        <option value="@sexo">@sexo</option>
                    }
                </select>
            </div>

          
            
            <div class="form-group">
                <label  class="control-label">Fecha de Nacimiento</label>
                <input asp-for="fechaNacimiento" class="form-control" />
   
            </div>


            <div class="form-group">
                <label class="control-label">Costo de Adquisicion</label>
                <input asp-for="costoAdquisicion" class="form-control" />

            </div>

            <div class="form-group">
                <label class="control-label">Tipo de alimentacion</label>
                <input asp-for="TipoAlimentacion" class="form-control" />

            </div>
            
            <div class="form-group">
                <label class="control-label">Costo de Alimentacion</label>
                <input asp-for="costoAlimentacion" class="form-control" />

            </div>

            <div class="form-group">
                <label class="control-label">Precio del KG bovino en pie </label>
                <input asp-for="PreciokgBovinoEnPie" class="form-control" />

            </div>
            
            <div class="form-group">
                <label class="control-label">Peso Actual</label>
                <input asp-for="pesoActual" class="form-control" />

            </div>


            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="hibrido" />Hibrido?
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a la lista</a>
</div>
<p>@ViewBag.msg</p>